{
  "name": "CropPlan",
  "type": "object",
  "properties": {
    "crop_name": {
      "type": "string",
      "description": "Name of the crop"
    },
    "variety": {
      "type": "string",
      "description": "Crop variety or cultivar"
    },
    "planting_date": {
      "type": "string",
      "format": "date",
      "description": "Date of planting"
    },
    "expected_harvest_date": {
      "type": "string",
      "format": "date",
      "description": "Expected harvest date"
    },
    "growth_stage": {
      "type": "string",
      "enum": [
        "seed_prep",
        "germination",
        "seedling",
        "vegetative",
        "flowering",
        "fruiting",
        "maturity",
        "harvest"
      ],
      "description": "Current growth stage"
    },
    "location": {
      "type": "string",
      "description": "Field or plot location"
    },
    "area_size": {
      "type": "string",
      "description": "Size of planting area"
    },
    "timeline": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "week": {
            "type": "number"
          },
          "stage": {
            "type": "string"
          },
          "activities": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "tips": {
            "type": "string"
          }
        }
      },
      "description": "Week-by-week crop timeline"
    },
    "soil_requirements": {
      "type": "string",
      "description": "Soil type and preparation needed"
    },
    "water_schedule": {
      "type": "string",
      "description": "Watering frequency and amount"
    },
    "fertilizer_plan": {
      "type": "string",
      "description": "Fertilization schedule"
    },
    "notes": {
      "type": "string",
      "description": "Additional notes and observations"
    },
    "status": {
      "type": "string",
      "enum": [
        "planning",
        "active",
        "completed",
        "abandoned"
      ],
      "default": "planning"
    }
  },
  "required": [
    "crop_name",
    "planting_date"
  ],
  "rls": {
    "create": {
      "created_by": "{{user.email}}"
    },
    "read": {
      "$or": [
        {
          "created_by": "{{user.email}}"
        },
        {
          "user_condition": {
            "role": "admin"
          }
        }
      ]
    },
    "update": {
      "$or": [
        {
          "created_by": "{{user.email}}"
        },
        {
          "user_condition": {
            "role": "admin"
          }
        }
      ]
    },
    "delete": {
      "$or": [
        {
          "created_by": "{{user.email}}"
        },
        {
          "user_condition": {
            "role": "admin"
          }
        }
      ]
    }
  }
}