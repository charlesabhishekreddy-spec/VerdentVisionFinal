{
  "name": "Treatment",
  "type": "object",
  "properties": {
    "disease_name": {
      "type": "string",
      "description": "Disease this treatment is for"
    },
    "treatment_name": {
      "type": "string",
      "description": "Name of treatment"
    },
    "treatment_type": {
      "type": "string",
      "enum": [
        "organic",
        "chemical",
        "biological",
        "cultural"
      ],
      "description": "Type of treatment"
    },
    "description": {
      "type": "string",
      "description": "Treatment description"
    },
    "ingredients": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "quantity": {
            "type": "string"
          },
          "unit": {
            "type": "string"
          }
        }
      },
      "description": "Treatment ingredients and proportions"
    },
    "application_method": {
      "type": "string",
      "description": "How to apply the treatment"
    },
    "frequency": {
      "type": "string",
      "description": "How often to apply"
    },
    "safety_precautions": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Safety warnings"
    },
    "effectiveness_rating": {
      "type": "number",
      "description": "Effectiveness score out of 5"
    },
    "is_favorite": {
      "type": "boolean",
      "default": false,
      "description": "User marked as favorite"
    }
  },
  "required": [
    "disease_name",
    "treatment_name",
    "treatment_type"
  ],
  "rls": {
    "create": {
      "created_by": "{{user.email}}"
    },
    "read": true,
    "update": {
      "$or": [
        {
          "created_by": "{{user.email}}"
        },
        {
          "user_condition": {
            "role": "admin"
          }
        }
      ]
    },
    "delete": {
      "$or": [
        {
          "created_by": "{{user.email}}"
        },
        {
          "user_condition": {
            "role": "admin"
          }
        }
      ]
    }
  }
}