{
  "name": "PlantDatabase",
  "type": "object",
  "properties": {
    "common_name": {
      "type": "string",
      "description": "Common name of the plant"
    },
    "scientific_name": {
      "type": "string",
      "description": "Scientific/botanical name"
    },
    "plant_family": {
      "type": "string",
      "description": "Plant family (e.g., Solanaceae, Rosaceae)"
    },
    "plant_type": {
      "type": "string",
      "enum": [
        "vegetable",
        "fruit",
        "herb",
        "flower",
        "tree",
        "shrub",
        "grain",
        "legume"
      ],
      "description": "Type of plant"
    },
    "sunlight_requirement": {
      "type": "string",
      "enum": [
        "full_sun",
        "partial_shade",
        "full_shade"
      ],
      "description": "Sunlight needs"
    },
    "water_requirement": {
      "type": "string",
      "enum": [
        "low",
        "moderate",
        "high"
      ],
      "description": "Water needs"
    },
    "watering_schedule": {
      "type": "string",
      "description": "Detailed watering frequency and amount"
    },
    "soil_type": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Preferred soil types"
    },
    "soil_ph": {
      "type": "string",
      "description": "Optimal pH range (e.g., 6.0-7.0)"
    },
    "nutrient_needs": {
      "type": "object",
      "properties": {
        "nitrogen": {
          "type": "string"
        },
        "phosphorus": {
          "type": "string"
        },
        "potassium": {
          "type": "string"
        },
        "secondary_nutrients": {
          "type": "string"
        }
      },
      "description": "NPK and other nutrient requirements"
    },
    "fertilizer_schedule": {
      "type": "string",
      "description": "When and how to fertilize"
    },
    "temperature_range": {
      "type": "string",
      "description": "Optimal temperature range"
    },
    "hardiness_zones": {
      "type": "string",
      "description": "USDA hardiness zones"
    },
    "regional_variations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "region": {
            "type": "string"
          },
          "notes": {
            "type": "string"
          }
        }
      },
      "description": "Growing tips for different regions"
    },
    "propagation_methods": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "How to propagate (seeds, cuttings, division, etc.)"
    },
    "common_pests": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Common pests affecting this plant"
    },
    "common_diseases": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Common diseases affecting this plant"
    },
    "companion_plants": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Plants that grow well together"
    },
    "avoid_planting_with": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Plants to avoid planting nearby"
    },
    "leaf_characteristics": {
      "type": "string",
      "description": "Detailed leaf description for identification"
    },
    "growth_habit": {
      "type": "string",
      "description": "How the plant grows (bushy, vining, upright, etc.)"
    },
    "mature_height": {
      "type": "string",
      "description": "Expected height at maturity"
    },
    "spacing": {
      "type": "string",
      "description": "Recommended spacing between plants"
    },
    "days_to_harvest": {
      "type": "string",
      "description": "Time from planting to harvest"
    },
    "season": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Best growing seasons"
    }
  },
  "required": [
    "common_name",
    "scientific_name",
    "plant_family"
  ],
  "rls": {
    "create": {
      "user_condition": {
        "role": "admin"
      }
    },
    "read": true,
    "update": {
      "user_condition": {
        "role": "admin"
      }
    },
    "delete": {
      "user_condition": {
        "role": "admin"
      }
    }
  }
}