{
  "name": "DiagnosisFeedback",
  "type": "object",
  "properties": {
    "diagnosis_id": {
      "type": "string",
      "description": "ID of the diagnosis being rated"
    },
    "accuracy_rating": {
      "type": "number",
      "description": "Rating from 1-5 stars"
    },
    "was_correct": {
      "type": "boolean",
      "description": "Whether the diagnosis was correct"
    },
    "correct_plant_name": {
      "type": "string",
      "description": "Actual plant name if diagnosis was wrong"
    },
    "correct_disease_name": {
      "type": "string",
      "description": "Actual disease name if diagnosis was wrong"
    },
    "feedback_notes": {
      "type": "string",
      "description": "Additional user feedback"
    },
    "diagnosis_data": {
      "type": "object",
      "description": "Snapshot of original diagnosis for analysis"
    }
  },
  "required": [
    "diagnosis_id",
    "accuracy_rating"
  ],
  "rls": {
    "create": {
      "created_by": "{{user.email}}"
    },
    "read": {
      "$or": [
        {
          "created_by": "{{user.email}}"
        },
        {
          "user_condition": {
            "role": "admin"
          }
        }
      ]
    },
    "update": {
      "$or": [
        {
          "created_by": "{{user.email}}"
        },
        {
          "user_condition": {
            "role": "admin"
          }
        }
      ]
    },
    "delete": {
      "$or": [
        {
          "created_by": "{{user.email}}"
        },
        {
          "user_condition": {
            "role": "admin"
          }
        }
      ]
    }
  }
}