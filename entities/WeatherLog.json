{
  "name": "WeatherLog",
  "type": "object",
  "properties": {
    "date": {
      "type": "string",
      "format": "date",
      "description": "Date of weather record"
    },
    "location": {
      "type": "string",
      "description": "Location or field name"
    },
    "temperature_high": {
      "type": "number",
      "description": "High temperature in Fahrenheit"
    },
    "temperature_low": {
      "type": "number",
      "description": "Low temperature in Fahrenheit"
    },
    "humidity": {
      "type": "number",
      "description": "Humidity percentage"
    },
    "rainfall": {
      "type": "number",
      "description": "Rainfall in inches"
    },
    "conditions": {
      "type": "string",
      "description": "Weather conditions (sunny, rainy, cloudy, etc)"
    },
    "wind_speed": {
      "type": "number",
      "description": "Wind speed in mph"
    },
    "notes": {
      "type": "string",
      "description": "Additional observations"
    }
  },
  "required": [
    "date",
    "temperature_high",
    "humidity"
  ],
  "rls": {
    "create": {
      "created_by": "{{user.email}}"
    },
    "read": {
      "$or": [
        {
          "created_by": "{{user.email}}"
        },
        {
          "user_condition": {
            "role": "admin"
          }
        }
      ]
    },
    "update": {
      "$or": [
        {
          "created_by": "{{user.email}}"
        },
        {
          "user_condition": {
            "role": "admin"
          }
        }
      ]
    },
    "delete": {
      "$or": [
        {
          "created_by": "{{user.email}}"
        },
        {
          "user_condition": {
            "role": "admin"
          }
        }
      ]
    }
  }
}