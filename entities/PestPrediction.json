{
  "name": "PestPrediction",
  "type": "object",
  "properties": {
    "pest_or_disease": {
      "type": "string",
      "description": "Name of predicted pest or disease"
    },
    "risk_level": {
      "type": "string",
      "enum": [
        "low",
        "moderate",
        "high",
        "critical"
      ],
      "description": "Risk severity level"
    },
    "probability": {
      "type": "number",
      "description": "Probability percentage (0-100)"
    },
    "affected_crops": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of crops at risk"
    },
    "prediction_date": {
      "type": "string",
      "format": "date",
      "description": "When prediction was made"
    },
    "expected_timeframe": {
      "type": "string",
      "description": "When outbreak is expected"
    },
    "weather_factors": {
      "type": "object",
      "properties": {
        "temperature": {
          "type": "number"
        },
        "humidity": {
          "type": "number"
        },
        "rainfall": {
          "type": "number"
        },
        "conditions": {
          "type": "string"
        }
      },
      "description": "Contributing weather conditions"
    },
    "preventative_measures": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Recommended prevention steps"
    },
    "location": {
      "type": "string",
      "description": "Geographic location or field"
    },
    "is_active": {
      "type": "boolean",
      "default": true,
      "description": "Whether alert is still active"
    },
    "user_dismissed": {
      "type": "boolean",
      "default": false,
      "description": "User acknowledged the alert"
    },
    "historical_data_used": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "IDs of diagnoses used for prediction"
    }
  },
  "required": [
    "pest_or_disease",
    "risk_level",
    "probability"
  ],
  "rls": {
    "create": {
      "created_by": "{{user.email}}"
    },
    "read": {
      "$or": [
        {
          "created_by": "{{user.email}}"
        },
        {
          "user_condition": {
            "role": "admin"
          }
        }
      ]
    },
    "update": {
      "$or": [
        {
          "created_by": "{{user.email}}"
        },
        {
          "user_condition": {
            "role": "admin"
          }
        }
      ]
    },
    "delete": {
      "$or": [
        {
          "created_by": "{{user.email}}"
        },
        {
          "user_condition": {
            "role": "admin"
          }
        }
      ]
    }
  }
}